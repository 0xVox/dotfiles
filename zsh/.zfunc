curl_time() {
    curl -so /dev/null -w "\
   namelookup:  %{time_namelookup}s\n\
      connect:  %{time_connect}s\n\
   appconnect:  %{time_appconnect}s\n\
  pretransfer:  %{time_pretransfer}s\n\
     redirect:  %{time_redirect}s\n\
starttransfer:  %{time_starttransfer}s\n\
-------------------------\n\
        total:  %{time_total}s\n" "$@"
}

ranpass(){
    cat /dev/urandom | head -n 128 | base64 | sha256sum | awk '{print $1}'
}

tdocs(){
    docker run --rm --volume "$(pwd):/terraform-docs" -u $(id -u) quay.io/terraform-docs/terraform-docs markdown /terraform-docs > REFERENCE.md
}

sw_theme() {
    mv ~/.config/alacritty/alacritty.yml ~/.config/alacritty/alacritty_tmp
    mv ~/.config/alacritty/alacritty_switch.yml ~/.config/alacritty/alacritty.yml
    mv ~/.config/alacritty/alacritty_tmp ~/.config/alacritty/alacritty_switch.yml

    default_window_style='fg=#d0cfcc,bg=#171421'
    alternate_window_style='fg=#171421,bg=#ffffff'
    current_window_style=$(tmux show -Av window-style)

    case $current_window_style in
        $default_window_style|'default')
            # Change to the alternate window style.
            tmux set window-style $alternate_window_style
            ;;
        *)
            # Change back to the default window style.
            tmux set window-style $default_window_style
            ;;
    esac

}
