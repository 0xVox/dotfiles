# Useful jq's
alias f_taintednodes="jq '.items[] | select(.spec.taints) | { node: .metadata.name, key: .spec.taints[].key, value: .spec.taints[].value }'"
func f_itoname(){
    jq ".items[] | select(.spec.providerID | contains(\"$1\")) | .metadata.name" -r
}

