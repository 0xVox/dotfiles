{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "terraform": {
		"command": "terraform-ls",
		"args": ["serve"],
		"filetypes": [
			"terraform",
			"tf"
		],
		"initializationOptions": {},
		"settings": {}
	},
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    }
  }
}
